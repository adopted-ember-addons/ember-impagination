<h2>Infinite Scroll: Ember-Collection</h2>

{{code-snippet name="ember-collection-basics.hbs"}}
{{code-snippet name="ember-collection-basics.js"}}

{{#impagination-dataset
   fetch=fetch
   on-object-at=(action "onObjectAt")
   on-init=(action "initializeReadOffset")
   on-observe=(action "logDatasetState")
   load-horizon=30
   page-size=10

   as |records|}}

  <div class="demo_records-wrapper">
    <div class="demo_records-list-container" style="height: 500px; width: 600px;">
      {{#ember-collection
         items=records
         estimated-height=500px
         estimated-width=600px
         cell-layout=(fixed-grid-layout 500 70)
         as |record index|}}

        <div class="demo_record" style={{color-block record.content.hsl}}>
          Record {{index}}
        </div>

      {{/ember-collection}}
    </div>
  </div>

{{/impagination-dataset}}
